{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testMatch": ["**/tests/**/*Test.[jt]s?(x)"],
  "moduleDirectories": ["node_modules", "src"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.(t|j)s"],
  "coverageDirectory": "coverage",
  "testEnvironment": "node"
}
